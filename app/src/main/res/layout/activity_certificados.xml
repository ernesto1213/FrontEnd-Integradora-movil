<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F2F4F8">

    <LinearLayout
        android:id="@+id/layoutCertificados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO PRINCIPAL -->
        <TextView
            android:id="@+id/mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B1F23"
            android:paddingBottom="16dp" />

        <!-- CONTENEDOR DE CURSOS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/listaCursos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />

        </androidx.cardview.widget.CardView>

        <!-- BOTÓN DE CERTIFICADO -->
        <Button
            android:id="@+id/btnCertificado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Generar Certificado"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#0A7FD5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:enabled="false" />

        <!-- BOTÓN VOLVER -->
        <Button
            android:id="@+id/btnVolver"
            android:onClick="volverAlMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Volver al menú"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C757D"
            android:layout_marginTop="12dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>
