<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9">

    <!-- TARJETA DEL CURSO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="22dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtTituloDetalle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtDescripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtNivelDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#607D8B"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

    </LinearLayout>

    <!-- BOTONES -->
    <Button
        android:id="@+id/btnAbrirCurso"
        android:text="Abrir Curso ðŸŒ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2F48D3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginTop="16dp"
        android:elevation="6dp" />

    <Button
        android:id="@+id/btnVolver"
        android:text="â¬…ï¸ Volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2F48D3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginTop="10dp"
        android:elevation="6dp" />

</LinearLayout>
