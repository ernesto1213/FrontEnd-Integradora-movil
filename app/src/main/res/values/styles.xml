<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TARJETA DEL DASHBOARD -->
    <style name="DashboardCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:elevation">7dp</item>
        <item name="android:padding">20dp</item>
        <!-- Efecto ripple al presionar -->
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <!-- ICONOS DE CADA TARJETA -->
    <style name="DashboardIcon">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:tint">#1A237E</item>
    </style>

    <!-- TEXTO DE CADA TARJETA -->
    <style name="DashboardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textColor">#0D47A1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="CursoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="CursoCardTitulo">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0D47A1</item>
    </style>

    <style name="CursoCardDescripcion">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
